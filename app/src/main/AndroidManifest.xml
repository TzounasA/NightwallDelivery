<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gr.nightwall.deliveryapp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.business_management.EditItemActivity"
            android:label="@string/edit_item"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activities.business_management.EditCategoryActivity"
            android:label="@string/edit_category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.CategoriesActivity"
            android:label="@string/categories"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.EditIngredientActivity"
            android:label="@string/edit_ingredient_category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.EditIngredientCategoryActivity"
            android:label="@string/edit_ingredient_category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.EditItemTemplateActivity"
            android:label="@string/edit_item_template"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.ItemTemplatesActivity"
            android:label="@string/edit_templates_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.BusinessSettingsActivity"
            android:label="@string/edit_business_settings_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.business_management.BusinessManagementActivity"
            android:label="@string/manage_shop"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>