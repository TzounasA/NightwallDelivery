<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CartActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCartBack"
        app:layout_constraintBottom_toTopOf="@+id/lContinueOrder"
        tools:listitem="@layout/view_cart_item" />


    <!-- CONTINUE ORDER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lContinueOrder"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ripple_bg_on_primary"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvContinueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextAppearance.Subtitle2"
            tools:text="@string/x_to_min_order_price"
            android:textColor="@color/onPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvContinueBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextAppearance.Headline6"
            android:text="@string/continue_order"
            android:textColor="@color/onPrimary"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContinueTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextAppearance.Headline4"
            tools:text="12.30â‚¬"
            android:textColor="@color/onPrimary"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivArrow"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_simple"
            android:tint="@color/onPrimary"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- TOP BAR -->
    <Button
        android:id="@+id/btnCartBack"
        style="@style/AppTheme.IconButton"
        app:icon="@drawable/ic_back"
        app:iconTint="@color/onBackground"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        style="@style/AppTheme.TextAppearance.Headline5"
        android:gravity="center_vertical"
        android:text="@string/cart"
        android:layout_marginStart="8dp"
        app:layout_goneMarginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCartBack"/>

    <include
        layout="@layout/screen_top_layer"/>

</androidx.constraintlayout.widget.ConstraintLayout>