<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProfileIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="36dp"
                android:tint="@color/onBackground"
                app:srcCompat="@drawable/ic_profile_48"
                android:scaleType="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@color/black_10"
                app:civ_border_color="@color/onBackground"
                app:civ_border_width="2dp"
                app:layout_constraintTop_toTopOf="@id/ivProfileIcon"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileIcon"
                app:layout_constraintStart_toStartOf="@id/ivProfileIcon"
                app:layout_constraintEnd_toEndOf="@id/ivProfileIcon"/>

            <TextView
                android:id="@+id/tvUserName"
                style="@style/AppTheme.TextAppearance.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.08"
                tools:text="Αντώνης Τζούνας"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/ivProfileIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/lUserMainAddress"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:alpha="0.7">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_location_24"
                    android:tint="@color/onBackground"/>

                <TextView
                    android:id="@+id/tvUserMainAddress"
                    style="@style/AppTheme.TextAppearance.Body2"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Εθν. Παλλιγεννησίας 4"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lProfileNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/lUserMainAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    layout="@layout/item_profile_navigation"/>

                <include
                    layout="@layout/item_profile_navigation"/>

                <include
                    layout="@layout/item_profile_navigation"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnLogout"
                style="@style/AppTheme.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@+id/lProfileNavigation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnProfileBack"
        style="@style/AppTheme.IconButton"
        app:icon="@drawable/ic_back"
        app:iconTint="@color/onBackground"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>