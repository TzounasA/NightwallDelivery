<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.BuyItemDialog">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.32"/>

    <Space
        android:id="@+id/bottomMargin"
        android:layout_width="0dp"
        android:layout_height="@dimen/fullscreen_dialog_corner_radius"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/AppTheme.Dialog.Fullscreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bottomMargin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCloseDialog"
                style="@style/AppTheme.IconButton"
                app:icon="@drawable/ic_close_24"
                android:layout_marginStart="8dp"
                android:onClick="onClose"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvItemTitle"
                style="@style/AppTheme.TextAppearance.Headline6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                tools:text="Item title here"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnCloseDialog"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvItemTitle"
                app:layout_constraintBottom_toTopOf="@+id/btnToCart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemDescription"
                        style="@style/AppTheme.TextAppearance.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:alpha="0.7"
                        android:gravity="center"
                        tools:text="This is the item's description"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOptions"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Additional Info -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputAdditionalInfo"
                        style="@style/AppTheme.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:layout_goneMarginTop="16dp"
                        android:hint="@string/additional_info">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAdditionalInfo"
                            style="@style/AppTheme.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textCapSentences|textAutoComplete|textMultiLine"
                            android:lines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                style="@style/AppTheme.TextAppearance.Headline4"
                tools:text="2.30 €"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@id/btnToCart"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                android:id="@+id/quantityPicker"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/time_picker_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:snp_valueMarginStart="12dp"
                app:snp_valueMarginEnd="12dp"
                app:snp_buttonIconLeft="@drawable/ic_left_24"
                app:snp_buttonIconRight="@drawable/ic_right_24"
                app:snp_value_text_appearance="@style/AppTheme.TextAppearance.Headline5"
                app:snp_minValue="1"
                app:snp_stepSize="1"
                app:snp_updateInterval="100"
                app:snp_value="1"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/btnToCart"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Add to cart Button -->
            <Button
                android:id="@+id/btnToCart"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                tools:text="Στο καλάθι (2.30€)"
                app:icon="@drawable/ic_add_to_cart_24"
                style="@style/AppTheme.ActionButton.Positive"
                android:backgroundTint="@color/colorPrimary90"
                android:textAppearance="@style/AppTheme.TextAppearance.Headline6"
                android:layout_marginBottom="@dimen/fullscreen_dialog_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <include layout="@layout/screen_top_layer" />

</androidx.constraintlayout.widget.ConstraintLayout>