<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOptionName"
        style="@style/AppTheme.TextAppearance.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Option"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SINGLE OPTION -->
    <RadioGroup
        android:id="@+id/lSingleOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOptionName">

        <!--<androidx.appcompat.widget.AppCompatRadioButton
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            tools:text="Option 1" />

        <androidx.appcompat.widget.AppCompatRadioButton
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            tools:text="Option 2" />-->

    </RadioGroup>

    <!-- MULTIPLE OPTIONS -->
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/lMultipleOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:flChildSpacing="8dp"
        app:flRowSpacing="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOptionName">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:visibility="gone"

            android:textColor="@color/black_87"
            tools:text="Test (0.30€)"

            app:chipBackgroundColor="@color/black_10"
            app:chipStrokeColor="@color/black_87"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:visibility="gone"

            android:textColor="@color/onSecondary"
            tools:text="Chip (0.50€)"

            android:checked="true"
            app:chipIconSize="20dp"
            app:checkedIcon="@drawable/ic_check_24"
            app:iconStartPadding="4dp"

            app:chipStrokeWidth="1dp"
            app:chipBackgroundColor="@color/colorAccent"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:visibility="gone"

            android:textColor="@color/black_87"
            tools:text="Loukoutest"

            app:chipBackgroundColor="@color/black_10"
            app:chipStrokeColor="@color/black_87"
            app:chipStrokeWidth="1dp"/>

    </com.nex3z.flowlayout.FlowLayout>


</androidx.constraintlayout.widget.ConstraintLayout>