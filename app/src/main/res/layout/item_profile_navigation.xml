<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/ripple_bg"
    android:clickable="true"
    android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileNavIconBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/colorPrimary10"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileNavIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_edit_24"
        app:layout_constraintBottom_toBottomOf="@id/ivProfileNavIconBack"
        app:layout_constraintEnd_toEndOf="@id/ivProfileNavIconBack"
        app:layout_constraintStart_toStartOf="@id/ivProfileNavIconBack"
        app:layout_constraintTop_toTopOf="@id/ivProfileNavIconBack" />

    <TextView
        android:id="@+id/tvProfileNavTitle"
        style="@style/AppTheme.TextAppearance.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:text="Επεξεργασία προφίλ"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/tvProfileNavDescription"
        app:layout_constraintStart_toEndOf="@+id/ivProfileNavIconBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileNavDescription"
        style="@style/AppTheme.TextAppearance.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="4dp"
        android:alpha="0.7"
        tools:text="Αλλάξτε τις πληροφορίες του προφίλ σας"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProfileNavIconBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileNavTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_simple"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>