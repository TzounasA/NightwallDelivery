<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.business_management.EditIngredientCategoryActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lActionButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <!-- Priority -->
            <include
                android:id="@+id/lineIngredientCategoryPriority"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                layout="@layout/layout_settings_line_input"/>

            <!-- Required -->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbRequired"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                style="@style/AppTheme.TextAppearance.Subtitle1"
                android:layout_marginStart="72dp"
                android:text="@string/required_option" />

            <!-- Name -->
            <include
                android:id="@+id/lineIngredientCategoryName"
                layout="@layout/layout_settings_line_input"/>

            <!-- Description -->
            <include
                android:id="@+id/lineIngredientCategoryDescription"
                layout="@layout/layout_settings_line_long_input"/>

            <!-- Single / Multiple Options -->
            <RadioGroup
                android:id="@+id/rgOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbSingleOption"
                    style="@style/AppTheme.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:checked="true"
                    android:text="@string/single_option"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbMultipleOptions"
                    style="@style/AppTheme.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/multiple_options"
                    android:textSize="16sp" />

            </RadioGroup>

            <!-- Ingredients -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:paddingStart="72dp"
                android:paddingEnd="16dp">

                <TextView
                    style="@style/AppTheme.TextAppearance.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/ingredients"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    style="@style/AppTheme.Button.Secondary"
                    android:onClick="addNewIngredient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/lActionButtons"
        layout="@layout/layout_settings_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        layout="@layout/screen_top_layer"/>

</androidx.constraintlayout.widget.ConstraintLayout>