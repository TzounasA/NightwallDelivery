<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.business_management.EditItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lActionButtons">

        <LinearLayout
            android:id="@+id/lParentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:orientation="vertical">

            <!-- Priority -->
            <include
                android:id="@+id/lineItemPriority"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                layout="@layout/layout_settings_line_input"/>

            <!-- Name -->
            <include
                android:id="@+id/lineItemName"
                layout="@layout/layout_settings_line_input"/>

            <!-- Description -->
            <include
                android:id="@+id/lineItemDescription"
                layout="@layout/layout_settings_line_long_input"/>

            <!-- Price -->
            <include
                android:id="@+id/lineItemStartPrice"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                layout="@layout/layout_settings_line_input"/>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/lActionButtons"
        layout="@layout/layout_settings_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        layout="@layout/screen_top_layer"/>

</androidx.constraintlayout.widget.ConstraintLayout>