<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.business_management.BusinessSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lActionButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:orientation="vertical">

            <!-- Active Hours -->
            <TextView
                style="@style/AppTheme.TextAppearance.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/active_hours" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvActiveHoursStart"
                    style="@style/AppTheme.TextAppearance.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="16dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="4dp"
                    tools:text="18:00" />

                <TextView
                    style="@style/AppTheme.TextAppearance.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="-"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvActiveHoursEnd"
                    style="@style/AppTheme.TextAppearance.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="16dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="4dp"
                    tools:text="02:00" />

            </LinearLayout>

            <!-- Custom Close -->
            <include
                android:id="@+id/lineOpenNowCustom"
                layout="@layout/layout_settings_line_2_switch"/>

            <TextView
                style="@style/AppTheme.TextAppearance.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/business_settings_basics" />

            <!-- Average Waiting Time -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lAverageWaitingTime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="72dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.TextAppearance.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/av_wait_time"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvAverageWaitingTime"
                    style="@style/AppTheme.TextAppearance.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="30'"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Minimum Price -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lMinOrderPrice"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="72dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.TextAppearance.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/min_order_price"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvMinOrderPrice"
                    style="@style/AppTheme.TextAppearance.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5â‚¬"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Address -->
            <include
                android:id="@+id/lineAddress"
                layout="@layout/layout_settings_line_input"/>

            <TextView
                style="@style/AppTheme.TextAppearance.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/business_settings_contact" />

            <!-- Phones -->
            <include
                android:id="@+id/linePhone1"
                layout="@layout/layout_settings_line_input"/>

            <include
                android:id="@+id/linePhone2"
                layout="@layout/layout_settings_line_input"/>

            <!-- Email -->
            <include
                android:id="@+id/lineEmail"
                layout="@layout/layout_settings_line_input"/>

            <TextView
                style="@style/AppTheme.TextAppearance.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/business_settings_social_media" />

            <!-- Facebook -->
            <include
                android:id="@+id/lineFacebook"
                layout="@layout/layout_settings_line_input"/>

            <!-- Instagram -->
            <include
                android:id="@+id/lineInstagram"
                layout="@layout/layout_settings_line_input"/>

            <!-- Website -->
            <include
                android:id="@+id/lineWebsite"
                layout="@layout/layout_settings_line_input"/>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/lActionButtons"
        layout="@layout/layout_settings_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Saving Indicator -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:background="@color/white_70">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
